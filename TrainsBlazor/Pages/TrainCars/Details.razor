@page "/traincars/details/{Id:int}"
@using BusinessLayer;
@using ServiceLayer;
@inject GenericManager<TrainCar, int> trainCarManager

<h3>Details</h3>

<div>
    <h4>Train car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Train Car Type
        </dt>
        <dd class="col-sm-10">
            @Model.TrainCarType
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Model.Weight
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @if (Model.Location != null)
            {
                @Model.Location.Name
            }
            else
            {
                <span>Location not available</span>
            }
        </dd>
        <dt class="col-sm-2">
            Train composition
        </dt>
        <dd class="col-sm-10">
            @if (Model.TrainComposition != null)
            {
                @Model.TrainComposition.Name
            }
            else
            {
                <span>Train composition not available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a href="traincars/edit/@Model.Id">Edit</a> |
    <a href="traincars">Back to List</a>
</div>

@code
{
    [Parameter]
    public int Id { get; set; }

    TrainCar Model = new();

    protected override async Task OnInitializedAsync()
    {
        Model = await trainCarManager.ReadAsync(Id, true);
    }

}
